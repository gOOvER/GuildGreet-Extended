<Bindings>
	<Binding name="GUILDGREETCONFIG" header="GUILDGREET" runOnUp="true">
		if ( keystate == "down" ) then
			if _G[GLDG_GUI]:IsVisible() then
				_G[GLDG_GUI]:Hide();
			else
				_G[GLDG_GUI]:Show();
			end
		end
	</Binding>
	<Binding name="GUILDGREETCLEAR" runOnUp="true">
		if ( keystate == "down" ) then
			GLDG_ClearList();
		end
	</Binding>
	<Binding name="GUILDGREETTEST" runOnUp="true">
		if ( keystate == "down" ) then
			GLDG_Test();
		end
	</Binding>
	<Binding name="GUILDGREETGREETGUILD" runOnUp="true">
		if ( keystate == "down" ) then
			GLDG_KeyGreet();
		end
	</Binding>
	<Binding name="GUILDGREETBYEGUILD" runOnUp="true">
		if ( keystate == "down" ) then
			GLDG_KeyBye();
		end
	</Binding>
	<Binding name="GUILDGREETLATERGUILD" runOnUp="true">
		if ( keystate == "down" ) then
			GLDG_KeyLater();
		end
	</Binding>
</Bindings>
